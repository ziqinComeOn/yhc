            </view>
            <view class="weui-cell__bd weui-cell_primary">
              <view>认证</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access">
              <block wx:if="{{isaut==0}}">去认证</block>
              <block wx:elif="{{isaut==1}}">认证中</block>
              <block wx:else="{{isaut==2}}">已认证</block>
            </view>
          </navigator>
        </view>
      </view>
    </view>
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_small-appmsg">
        <view class="weui-cells weui-cells_in-small-appmsg">
          <navigator url="{{url24}}" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
              <image src="{{icon24}}" style="width: 20px;height: 20px;margin-right: 16px;vertical-align:middle;" />
            </view>
            <view class="weui-cell__bd weui-cell_primary">
              <view>设置</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator>
          <navigator url="{{url21}}" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
              <image src="{{icon21}}" style="width: 20px;height: 20px;margin-right: 16px;vertical-align:middle;" />
            </view>
            <view class="weui-cell__bd weui-cell_primary">
              <view>帮助反馈</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator>

          <navigator url="{{url22}}" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
              <image src="{{icon22}}" style="width: 20px;height: 20px;margin-right: 16px;vertical-align:middle;" />
            </view>
            <view class="weui-cell__bd weui-cell_primary">
              <view>用户协议</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator>

          <navigator url="{{url23}}" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
              <image src="{{icon23}}" style="width: 20px;height: 20px;margin-right: 16px;vertical-align:middle;" />
            </view>
            <view class="weui-cell__bd weui-cell_primary">
              <view>关于我们</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator>

        </view>
      </view>
    </view>
  </view>
</view>

